%header.sidebar
  = link_to root_path, :class => "sidebar__branding sidebar__section" do
    .sidebar__container.sidebar__logo
      = image_tag "bound.svg", :class => "sidebar__logoIcon"
      %h1.sidebar__logoText
        Bound
  %nav.sidebar__nav
    %ul.sidebar__menu
      %li.sidebar__menuItem{:class => ("is-active" if @active_nav == :zones)}
        = link_to root_path, :class => "sidebar__menuLink" do
          %span.sidebar__menuLinkText
            Zones
      %li.sidebar__menuItem{:class => ("is-active" if @active_nav == :users)}
        = link_to users_path, :class => "sidebar__menuLink" do

          %span.sidebar__menuLinkText
            Users
      %li.sidebar__menuItem{:class => ("is-active" if @active_nav == :tokens)}
        = link_to api_tokens_path, :class => "sidebar__menuLink" do
          %span.sidebar__menuLinkText
            API Tokens
  - if changes_pending > 0
    .sidebar__apply
      = link_to "Apply #{pluralize(changes_pending, "Change")}", publish_path, :class => "button button--small button--blocked button--blue"
  %ul.sidebar__footer
    %p.sidebar__footer__content
      %span.text--smaller
        Logged in as: #{current_user.description}
      %span.text--smaller
        %strong
          = link_to "Log Out", logout_path, :method => :delete
